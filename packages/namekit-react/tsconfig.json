{
  "compilerOptions": {
    "strict": true,
    "jsx": "react",
    "module": "ES2020",
    "moduleResolution": "bundler",
    "target": "ES2020",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "declaration": true
  },
  "include": ["src/**/*"]
}
